                                <input type="submit" value="Sneak beak" name="subscribe" id="mc-embedded-subscribe" class="btn btn-default btn-lg btn-gold">
                            </div>
                        </div>
                        </form>
                        <!--End mc_embed_signup-->

                        <div class="video-overlay">
                            <video width="297" height="auto" autoplay="">
                                <source src="/media/budgie-home.webm" type="video/webm">
                                <source src="/media/budgie-home.mp4" type="video/mp4">
